<h2>Books</h2>
<table>
	<thead>
	<tr>
	  <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
	</tr>
	</thead>

	<tbody>
		<% @books.each do |book|%>
		      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
        <%= link_to "show", book_path(book.id), class: "show_book{id}" %>
    </td>
    <td>
        <%= link_to "edit", edit_book_path(book.id), class: "edit_book{id}" %>
    </td>
    <td>
    	<%= link_to "destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: "destroy_book{id}" %>
    </td>

      </tr>
      <% end %>
	</tbody>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title, class: "book_title" %>
	<h4>Body</h4>
	<%= f.text_area :body, class: "book_body" %>

	<%= f.submit :'Create Book' %>

<% end %>