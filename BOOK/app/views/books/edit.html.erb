
<h1>Editting book</h1>
<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title, class: "book_title" %>
	<h4>Body</h4>
	<%= f.text_area :body, class: "book_body" %>

	<%= f.submit :'Update Book' %>

	<%= link_to "show", book_path(@book.id), class: "show_f{id}" %>
	<%= link_to "Back", books_path, class: "back" %>

<% end %>